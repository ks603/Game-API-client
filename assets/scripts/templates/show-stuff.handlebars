{{#each games as |game|}}
  {{log game}}
  <section data-id="{{game.id}}">
    <h3>
      {{game.data}}
    </h3>
    <p> Game Name:
      {{#if game.given_name}}
        {{game.given_name}}
      {{else}}
        No data provided.
      {{/if}}
    </p>
    <p> Review of Game:
      {{#if game.review}}
        {{game.review}}
      {{else}}
        No data provided.
      {{/if}}
    </p>
    <p> recommended?
      {{#if game.recommend}}
        {{game.recommend}}
        {{else}}
      No data provided.
    {{/if}}
    </p>
    <p> Game ID:
      {{#if game.id}}
        {{game.id}}
        {{else}}
      No data provided.
    {{/if}}
    </p>
    <button class="btn btn-danger remove-book" data-id="{{game.id}}">Remove</button>
  </section>

{{/each}}
