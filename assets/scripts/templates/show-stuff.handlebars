{{#each games as |game|}}
  <section data-id="{{game.id}}">
    <h3>
      {{game.data}}
    </h3>
    <p> Game Name:
      {{#if game.given_name}}
        {{game.given_name}}
      {{else}}
        No data provided
      {{/if}}
    </p>
    <p> Review of Game:
      {{#if game.review}}
        {{game.review}}
      {{else}}
        No data provided
      {{/if}}
    </p>
    <p> Recommended?
      {{#if game.recommend}}
        {{game.recommend}}
      {{else}}
        No data Recommended
      {{/if}}
    </p>
      <p> Game ID:
        {{#if game.id}}
          {{game.id}}
        {{else}}
          No data provided.
        {{/if}}
        {{#if game.editable}}
          {{> remove-book id=game.id}}
        {{/if}}
      </p>
    {{> remove-book id=game.id}}
  </section>

{{/each}}
